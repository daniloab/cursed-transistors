{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "noImplicitAny": true,
    "declaration": true,
    "strict": true,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./typings"],
    "sourceMap": true,
    "lib": [
      "es2020",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
